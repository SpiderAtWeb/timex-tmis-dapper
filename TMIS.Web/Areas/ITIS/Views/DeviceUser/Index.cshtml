@using TMIS.Models.ITIS.VM
@model IEnumerable<DeviceUserVM>


@section VendorStyles {
	<link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
	<link href="~/vendor/libs/toastr/toastr.css" rel="stylesheet" />
	<style>
		.btn-fixed-width {
			min-width: 180px; /* Adjust width as needed */
		}
	</style>
}

@section PageScripts {
	<script src="~/custom/loading-hide.js"></script>
	<script src="~/custom/tables-datatables-basic.js"></script>
	@if (TempData["success"] != null)
	{
		<script src="~/vendor/libs/toastr/toastr.js"></script>
		<script type="text/javascript">
			toastr.success('@TempData["success"]');
		</script>
		TempData.Clear();
	}
}

@await Html.PartialAsync("_Loading")

@* ************** Content ************** *@
<!-- Ajax Sourced Server-side -->
<div class="panelDiv">
	<div class="card mb-6">
		<h5 class="card-header page-header">Device Users</h5>
		<div class="card-body">
			<div class="tab-content p-0">
				<div class="tab-pane fade show active" id="navs-top-home" role="tabpanel">
					<div class="row p-1">
						<div class="col text-end">
							<a asp-action="Create" class="btn btn-primary btn-fixed-width">
								<i class="ri-add-line"></i>
								<span class="d-none d-sm-inline-block">Assign</span>
							</a>
						</div>
					</div>
					<div class="row p-1">
						<div class="col text-end">
							<a asp-action="Return" class="btn btn-primary btn-fixed-width">
								<i class="ri-add-line"></i>
								<span class="d-none d-sm-inline-block">Return</span>
							</a>
						</div>
					</div>
					<div class="card-datatable text-nowrap">
						<table class="datatables-ajax table table-bordered dt-tbl">
							<thead>
								<tr class="table-info">															
									<th>Device Type</th>
									<th>Device Name</th>
									<th>Serial#</th>
									<th>Employee</th>
									<th>Designation</th>
									<th>Assigned Date</th>
									<th>Location</th>
									<th>Department</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>																				
										<td>@item.DeviceType</td>
										<td>@item.DeviceName</td>
										<td>@item.SerialNumber</td>
										<td>@item.EmpName</td>
										<td>@item.Designation</td>
										<td>@item.AssignedDate?.ToString("MM-dd-yyyy")</td>
										<td>@item.LocationName</td>
										<td>@item.DepartmentName</td>								
										<td>
											<a class="btn btn-primary btn-sm" asp-controller="DeviceUser" asp-action="View" asp-route-deviceId="@item.DeviceID"><i class="ri-eye-fill"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
