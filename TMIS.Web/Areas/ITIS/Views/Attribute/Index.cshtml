@using TMIS.Models.ITIS.VM

@model IEnumerable<AttributeVM>

@section VendorStyles {
	<link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
	<link href="~/vendor/libs/toastr/toastr.css" rel="stylesheet" />
}

@section PageStyles {
	<style>
		.table td {
			max-width: 100px; /* Set a suitable width for your columns */
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
		}

		.dt-tbl {
			font-size: 10px; /* Adjust this value to your preferred size */
		}
	</style>
}

@section PageScripts {
	@*   <script src="~/custom/tables-datatables-basic.js"></script>
    <script src="~/custom/loading-hide.js"></script>
    <script src="~/vendor/libs/toastr/toastr.js"></script> *@

	<script src="~/custom/tables-datatables-mc-request.js"></script>
	<script src="~/custom/loading-hide.js"></script>

	@if (TempData["success"] != null)
	{
		<script src="~/vendor/libs/toastr/toastr.js"></script>
		<script type="text/javascript">
			toastr.success('@TempData["success"]');
		</script>
		TempData.Clear();
	}
}

@await Html.PartialAsync("_Loading")

@* ************** Content ************** *@
<!-- Ajax Sourced Server-side -->
<div class="panelDiv">
	<div class="card mb-6">
		<h5 class="card-header page-header">Device Attributes</h5>
		<div class="card-body">
			<div class="tab-content p-0">
				<div class="tab-pane fade show active" id="navs-top-home" role="tabpanel">
					<div class="row">
						<div class="col text-end">
							<a asp-action="Create" class="btn btn-primary"> <i class="ri-add-line"></i> <span class="d-none d-sm-inline-block">Add New Attribute</span></a>
						</div>
					</div>
					<div class="card-datatable text-nowrap">
						<table class="datatables-ajax table table-bordered" id="dashboard">
							<thead>
								<tr class="table-info">
									<th class="d-none">Id</th>
									<th>Attribute Label</th>
									<th>Type</th>
									<th class="d-none">DeviceTypeID</th>
									<th>Device Type</th>
									<th>Action</th>									
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td class="d-none">@item.AttributeID</td>
										<td>@item.Name</td>
										<td>@item.DataType</td>
										<td class="d-none">@item.DeviceTypeID</td>
										<td>@item.DeviceTypeName</td>
										<td>
											<a class="btn btn-primary btn-sm" asp-controller="Attribute" asp-action="Edit" asp-route-id="@item.AttributeID"><i class="ri-pencil-fill"></i></a>
											<a class="btn btn-primary btn-sm" asp-controller="Attribute" asp-action="View" asp-route-id="@item.AttributeID"><i class="ri-eye-fill"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




