@model EmpPassVM

<h5>Exit Permit #:@Model.EmpGpNo
    <span class="badge rounded-pill bg-label@(Model.IsApproved == "Approved" ? "-success" : Model.IsApproved == "Rejected" ? "-danger" : "-primary")">
        @Model.IsApproved
    </span>
</h5>

<div class="card-body">
    <div class="mb-1">
        <small class="text-light fw-medium">Gatepass details</small>
    </div>
    <div class="row mb-1">
        <div class="col-4 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.GateName" readonly />
                <label>Gate Name</label>
            </div>
        </div>
        <div class="col-4 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.ExpLoc" readonly />
                <label>Location</label>
            </div>
        </div>
        <div class="col-4 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.ExpOutTime.ToString()" readonly />
                <label>Out time</label>
            </div>
        </div>
    </div>

    <div class="row mb-1">
        <div class="col-8 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.ExpReason" readonly />
                <label>Reason</label>
            </div>
        </div>       
        <div class="col-4 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.IsReturn" readonly />
                <label>Is Return</label>
            </div>
        </div>      
    </div>
    <div class="row mb-1">
        <div class="col-4 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.ApprovedBy" readonly />
                <label>Responsed By</label>
            </div>
        </div>
        <div class="col-4 g-1">
            <div class="form-floating form-floating-outline">
                <input type="text" class="form-control" value="@Model.ResponsedDateTime" readonly />
                <label>Responsed DateTime</label>
            </div>
        </div>
    </div>

    <div>
        <div class="mb-1">
            <small class="text-light fw-medium">Exit Permit Employees</small>
        </div>
        @foreach (var item in Model.ShowGPItemVMList)
        {
            <div class="row mb-1">
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <input type="text" class="form-control" value="@item.EmpName" readonly />
                        <label>Employee Name</label>
                    </div>
                </div>
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <input type="text" class="form-control" value="@item.EmpEPF" readonly />
                        <label>Employee EPF</label>
                    </div>
                </div>
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <input type="text" class="form-control" value="@item.ActualOutTime" readonly />
                        <label>Actual OUT</label>
                    </div>
                </div>
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <input type="text" class="form-control" value="@item.ActualInTime" readonly />
                        <label>Actual IN</label>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

