@model EmployeePassVM

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
    <link href="~/vendor/libs/toastr/toastr.css" rel="stylesheet" />
}

@section VendorScripts {
    <script src="~/vendor/libs/select2/select2.js"></script>
    <script src="~/vendor/libs/toastr/toastr.js"></script>
}

@section PageScripts {
    <script src="~/js/form-basic-inputs.js"></script>

    <script>
        $(document).on('click', '#add-person', function () {
          const empName = $('#employeeName').val().trim();
          const empEpf = $('#employeeEpf').val().trim();

          if (empName === "" || empEpf === "") {
            toastr.error("Please fill in both Employee Name and EPF before adding a new row.");
            return;
          }

          // Check for duplicates
          let isDuplicate = false;
          $('.person-row').each(function () {
              const labelEpf = $(this).find('.label-emp-epf').text().trim();
              if (labelEpf === empEpf) {
                  isDuplicate = true;
                  return false; // exit .each loop
              }
          });


           // Check if maximum limit reached
          if ($('.person-row').length >= 5) {
            toastr.error("Maximum of 5 employees can be added.");
            return;
          }

          if (isDuplicate) {
            toastr.error("This employee is already added.");
            return;
          }

          const index = $('.person-row').length;

          // Add new row
                  const newRow = `<div class="row person-row align-items-stretch mb-1">
          <div class="col-4 g-1">
            <div class="emp-label grey-box label-emp-name">${empName}</div>
            <input type="hidden" name="EmployeePass.EmpPassEmpList[${index}].EmpName" value="${empName}" />
          </div>
          <div class="col-4 g-1">
            <div class="emp-label grey-box label-emp-epf">${empEpf}</div>
            <input type="hidden" name="EmployeePass.EmpPassEmpList[${index}].EmpEPF" value="${empEpf}" />
          </div>
          <div class="col-4 g-1">
            <div class="row align-items-stretch gx-1 h-100">
              <div class="col-2 d-flex">
                <button type="button" class="btn btn-danger w-100 h-100 delete-person">
                  <i class="fa-solid fa-trash-can"></i>
                </button>
              </div>
            </div>
          </div>
        </div>`;
          $('#personContainer').append(newRow);
          $('#employeeName').val('');
           $('#employeeEpf').val('');
        });

                function reindexPersonRows() {
          $('.person-row').each(function (index) {
            // Update EmpName input
            $(this).find('input[name*="EmpName"]').attr('name', `EmployeePass.EmpPassEmpList[${index}].EmpName`);

            // Update EmpEPF input
            $(this).find('input[name*="EmpEPF"]').attr('name', `EmployeePass.EmpPassEmpList[${index}].EmpEPF`);
          });
        }

        $(document).on('click', '.delete-person', function () {
          $(this).closest('.person-row').remove();
           reindexPersonRows();
        });
    </script>

}

@section PageStyles {
    <style>
        .grey-box {
            background-color: #dfe5ed;
            border-radius: 5px;
            padding: 5px 15px;
            display: inline-block;
            width: 100%;
            height: 100%;
            line-height: 30px; /* vertically center text if needed */
        }
    </style>
}

<div class="card">
    <h5 class="card-header page-header">Create Employees Exit Permit</h5>
    <form asp-action="Create" method="post">
        <div class="card-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="row mb-2">
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <select asp-for="EmployeePass.GuardRoomId" asp-items="Model.GuardRooms" class="select2 form-select" data-allow-clear="true" title="Guard Room">
                            <option disabled selected>- Select From -</option>
                        </select>
                        <label for="GuardRoomId">Exit Guard Room</label>
                    </div>

                </div>
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <input asp-for="EmployeePass.Location" type="text" class="form-control" placeholder="Borella" >
                        <label for="Location">Location</label>
                    </div>
                </div>
                <div class="col-6 g-1">
                    <div class="form-floating form-floating-outline">
                        <input asp-for="EmployeePass.Reason" type="text" class="form-control" placeholder="Go to Bank" >
                        <label for="Reason">Reason</label>
                    </div>
                </div>

            </div>

            <div class="row mb-2">
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <select asp-for="EmployeePass.ApprovedById" asp-items="@Model.ApprovEmps" class="select2 form-select" data-allow-clear="true">
                            <option disabled selected>- Select From -</option>
                        </select>
                        <label for="ApprovedById">Approve Person</label>
                    </div>
                </div>
                <div class="col-3 g-1">
                    <div class="form-floating form-floating-outline">
                        <input asp-for="EmployeePass.OutTime" class="form-control" type="time" id="html5-time-input" />
                        <label for="html5-time-input">Time</label>
                    </div>
                </div>

                <div class="col-2 d-flex align-items-center justify-content-left mt-2">
                    <span class="form-check">
                        <input type="checkbox" asp-for="EmployeePass.IsNoReturn" value="true" />
                        <label for="EmployeePass.IsNoReturn">Off for the Day</label>
                    </span>
                </div>

                <div class="col-4 g-1">
                </div>
            </div>


            <hr>
            <div class="row">
                <div class="mb-1">
                    <small class="text-light fw-medium">Add Employees to List..</small>
                </div>
                <div class="col-4 g-1">
                    <div class="form-floating form-floating-outline">
                        <input type="text" id="employeeName" class="form-control" placeholder="John Doe">
                        <label for="employeeName">Employee Name</label>
                    </div>
                </div>
                <div class="col-4 g-1">
                    <div class="form-floating form-floating-outline">
                        <input type="number" id="employeeEpf" class="form-control" placeholder="1308596" >
                        <label for="employeeEpf">Employee EPF</label>
                    </div>
                </div>
                <div class="col-4 g-1">
                    <div class="row align-items-stretch gx-1 h-100">
                        <div class="col-2 d-flex">
                            <button type="button" id="add-person" class="btn btn-primary w-100"><i class="fa-solid fa-user-plus"></i></button>
                        </div>

                        <div class="col-2">
                        </div>

                        <div class="col-4 d-flex">
                        </div>
                        <div class="col-4 d-flex">
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3" id="personContainer">
            </div>

            <div class="row">
                <div class="col-4 g-1">
                    <div class="row align-items-stretch gx-1 h-100">
                        <div class="col-4 d-flex">
                            <a asp-controller="GenEmpPass" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                        <div class="col-4 d-flex">
                            <button type="submit" class="btn btn-primary w-100 h-100">Submit</button>
                        </div>
                    </div>
                </div>
                <div class="col-4 g-1">
                </div>
                <div class="col-4 g-1">
                </div>
            </div>
        </div>
    </form>
</div>
