@model IEnumerable<HRRS_ITRequest>

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
    <link href="~/vendor/libs/toastr/toastr.css" rel="stylesheet" />
}

@section PageStyles {
    <style>
        .table td {
            max-width: 100px; /* Set a suitable width for your columns */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .dt-tbl {
            font-size: 10px; /* Adjust this value to your preferred size */
        }
    </style>
}

@section PageScripts {
    <script src="~/custom/tables-datatables-mc-request.js"></script>
    <script src="~/custom/loading-hide.js"></script>

    @if (TempData["success"] != null)
    {
        <script src="~/vendor/libs/toastr/toastr.js"></script>
        <script type="text/javascript">
            toastr.success('@TempData["success"]');
        </script>
        TempData.Clear();
    }
    @if (TempData["error"] != null)
    {
        <script src="~/vendor/libs/toastr/toastr.js"></script>
        <script type="text/javascript">
            toastr.error('@TempData["error"]');
        </script>
        TempData.Clear();
    }

    <script>
        const sendEmailModal = document.getElementById('sendEmailModal');
        sendEmailModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const requestId = button.getAttribute('data-id');
            const confirmBtn = document.getElementById('confirmSendEmailBtn');

            // Set the href to your controller method
            confirmBtn.href = `/HRRS/ITRequest/SendEmail/${requestId}`;
        });
    </script>

}

@await Html.PartialAsync("_Loading")

<div>    
    <input type="hidden" id="deleteUrl" value=@Url.Action("ITRequest", "ITRequest")>
    <input type="hidden" id="recordId" />
</div>
@* ************** Content ************** *@
<!-- Ajax Sourced Server-side -->
<div class="panelDiv">
    <div class="card mb-6">
        <h5 class="card-header page-header">IT REQUESTS</h5>
        <div class="card-body">
            <div class="tab-content p-0">
                <div class="tab-pane fade show active" id="navs-top-home" role="tabpanel">
                    <div class="row">
                        <div class="col text-end">
                            <a asp-action="Create" class="btn btn-primary"> <i class="ri-add-line"></i> <span class="d-none d-sm-inline-block">Create New</span></a>
                        </div>
                    </div>
                    <div class="card-datatable text-nowrap">
                        <table class="datatables-ajax table table-bordered" id="dashboard">
                            <thead>
                                <tr class="table-info">
                                    <th>Emp Name</th>
                                    <th>Designation</th>
                                    <th>Department</th>
                                    <th>Location</th>
                                    <th>Company</th>
                                    <th>NIC</th>
                                    <th>Due Start</th>
                                    <th>Recruitment</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.FirstName @item.LastName</td>                                     
                                            <td>@item.Designation</td>
                                            <td>@item.Department</td>
                                            <td>@item.Location</td>
                                            <td>@item.Company</td>
                                            <td>@item.NIC</td>
                                            <td>@item.DueStartDate?.ToString("MM-dd-yyyy")</td>
                                            <td>@item.IsReplacement</td>
                                            <td>@item.PropName</td>
                                            <td>
                                                <a class="btn btn-sm @(item.PropName == "Approved" ? "btn-secondary disabled" : "btn-primary") btn-edit"
                                                   asp-controller="ITRequest" asp-action="Edit" asp-route-id="@item.RequestID">
                                                   <i class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                             @*    <a class="btn btn-sm @(item.PropName == "Approved" ? "btn-secondary disabled" : "btn-primary") btn-edit"
                                                   asp-controller="ITRequest" asp-action="SendEmail" asp-route-id="@item.RequestID">
                                                   <i class="fa-solid fa-paper-plane"></i>
                                                </a>   *@
                                                <button type="button"
                                                        class="btn btn-sm @(item.PropName == "Approved" ? "btn-secondary disabled" : "btn-primary") btn-edit"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#sendEmailModal"
                                                        data-id="@item.RequestID"
                                                        @(item.PropName == "Approved" ? "disabled" : "")>
                                                    <i class="fa-solid fa-paper-plane"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center text-muted">No records found.</td>
                                    </tr>
                                }                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="sendEmailModal" tabindex="-1" role="dialog" aria-labelledby="sendEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sendEmailModalLabel">Confirm Email Send</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to send the request email?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmSendEmailBtn" href="#" class="btn btn-primary">Yes, Send</a>
            </div>
        </div>
    </div>
</div>




