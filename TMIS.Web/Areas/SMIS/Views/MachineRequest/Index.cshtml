@model IEnumerable<TransMC>

@{
    var pickerDate = ViewBag.today.ToString("yyyy-MM-dd");
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
    <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
}

@section PageStyles {
    <style>
        .table td {
            max-width: 100px; /* Set a suitable width for your columns */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}

@section PageScripts {
    <script src="~/custom/tables-datatables-mc-request.js"></script>
    <script src="~/custom/tables-datatables-mc-myreq.js"></script>
    <script src="~/custom/loading-hide.js"></script>
}

<div>
    <input type="hidden" id="selectUrl" value=@Url.Action("MyRequestGetAll", "MachineRequest")>
</div>

@* ************** Content ************** *@
<!-- Ajax Sourced Server-side -->
@await Html.PartialAsync("_Loading")
<div class="panelDiv">
    <div class="card mb-6">
        <div class="card-header px-0 pt-0">
            <div class="nav-align-top">
                <ul class="nav nav-pills nav-justified" role="tablist">
                    <li class="nav-item">
                        <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-home" aria-controls="navs-top-home" aria-selected="true">Available Machine List</button>
                    </li>
                    <li class="nav-item">
                        <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-req" aria-controls="navs-top-req" aria-selected="false">My Machine Requests</button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content p-0">
                <div class="tab-pane fade show active" id="navs-top-home" role="tabpanel">
                    <div class="card-datatable text-nowrap">
                        <table class="datatables-ajax table table-bordered" id="dashboard">
                            <thead>
                                <tr class="table-info">

                                    <th>
                                        QR Code
                                    </th>

                                    <th>
                                        Serial No
                                    </th>
                                    <th>
                                        Type
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Unit
                                    </th>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                      Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.QrCode</td>
                                        <td>@item.SerialNo</td>
                                        <td>@item.MachineType</td>
                                        <td>@item.CurrentStatus</td>
                                        <td>@item.CurrentUnit</td>
                                        <td>@item.Location</td>
                                        <td>
                                            <a class="edit-record btn btn-primary btn-sm" asp-controller="MachineRequest" asp-action="Details" asp-route-id="@item.Id"> <i class="ri-contract-fill"></i> </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="navs-top-req" role="tabpanel">

                    <div class="row justify-content-end mb-4">
                        <div class="col-4">
                            <div class="form-floating form-floating-outline">
                                <input asp-for="@pickerDate" type="text"
                                       id="dateToday"
                                       class="form-control dob-picker"
                                       placeholder="YYYY-MM-DD"
                                       onchange="reloadDataTable()" />
                                <label for="dateToday">Today</label>
                            </div>
                        </div>
                    </div>

                    <div class="card-datatable text-nowrap">
                        <table class="datatables-ajax table table-bordered" id="myRequests">
                            <thead>
                                <tr class="table-info">                               
                                    <th>
                                        QR Code
                                    </th>
                                    <th>
                                        Serial No
                                    </th>
                                    <th>
                                        Machine Type
                                    </th>
                                    <th>
                                        Rquest From
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                      Action
                                    </th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

