@model McRequestDetailsVM

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
    <link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
}

@section VendorScripts {

    <script src="~/vendor/libs/select2/select2.js"></script>
}

@section PageScripts {
    <script src="~/js/form-layouts.js"></script>
}

<form asp-action="Details" method="post">
    <div class="card mb-6">
        <h5 class="card-header page-header">Sewing Machine Transfer Request </h5>
        <div class="card-body">

            <input type="hidden" asp-for="oMcData!.Id" />

            <h6 class="text-success">Location you want to transfer</h6>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="form-floating form-floating-outline">
                        <select asp-for="ReqUnitId" asp-items="@Model.UnitsList" class="select2 form-select" data-allow-clear="true">
                            <option Disabled Selected>- Select Unit -</option>
                        </select>
                        <label for="Unity">Unit</label>
                        <span asp-validation-for="ReqUnitId" class="text-warning"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating form-floating-outline">
                        <select asp-for="ReqLocId" asp-items="@Model.LocationList" class="select2 form-select" data-allow-clear="true">
                            <option Disabled Selected>- Select Location -</option>
                        </select>
                        <label for="Location">Location</label>
                        <span asp-validation-for="ReqLocId" class="text-warning"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-floating form-floating-outline">
                        <input asp-for="ReqRemark" type="text" class="form-control" placeholder="Remarks" />
                        <label for="ReqRemark">Remarks</label>
                        <span asp-validation-for="ReqRemark" class="text-warning"></span>
                    </div>
                </div>

                <div class="col-md-4 ">
                    <div class="form-floating form-floating-outline row">
                        <div class="pt-1 col-6">
                            <button type="submit" class="btn btn-success w-100">Request</button>
                        </div>
                        <div class="pt-1 col-6">
                            <a asp-controller="MachineRequest" asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2 mt-2"></div>


            <hr class="my-4">
            <h6>Selected Sew Machine</h6>
            <div class="row g-4">
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.QrCode" type="text" class="form-control" placeholder="TSM00007" />
                            <label for="oMcData.QrCode">QR Code</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.SerialNo" type="text" class="form-control" placeholder="john.doe" />
                            <label for="serialNo">Serial No</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.ServiceSeq" type="text" id="serviceSeq" class="form-control" placeholder="100" />
                            <label for="serviceSeq">Service Sequence (Days)</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">

                            <input asp-for="oMcData!.MachineModel" type="text" id="farCode" class="form-control" placeholder="john.doe" />


                            <label for="MachineModelId">Machine Model</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.MachineBrand" type="text" id="farCode" class="form-control" placeholder="john.doe" />

                            <label for="machineBrandId">Machine Brand</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.MachineType" type="text" id="farCode" class="form-control" placeholder="john.doe" />
                            <label for="multicol-country">Machine Type</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.CompanyGroup" type="text" id="farCode" class="form-control" placeholder="john.doe" />

                            <label for="multicol-country">Group</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.OwnedCluster" type="text" id="farCode" class="form-control" placeholder="john.doe" />

                            <label for="multicol-country">Cluster</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.CurrentUnit" type="text" id="farCode" class="form-control" placeholder="john.doe" />

                            <label for="multicol-country">Unit</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.Location" type="text" id="farCode" class="form-control" placeholder="john.doe" />
                            <label for="multicol-country">Location</label>
                        </div>
                    </div>


                    <div class="col-md-4">
                        @if (Model.oMcData!.IsOwned)
                        {
                            <div class="form-floating form-floating-outline">
                                <input readonly asp-for="oMcData!.DatePurchased" type="date" id="datePurchased" class="form-control" placeholder="YYYY-MM-DD" />
                                <label for="datePurchased">Purchased Date</label>
                            </div>
                        }
                        else
                        {
                            <div class="form-floating form-floating-outline">
                                <input readonly asp-for="oMcData!.DateBorrow" type="date" id="datePurchased" class="form-control" placeholder="YYYY-MM-DD" />
                                <label for="datePurchased">Borrow Date</label>
                            </div>
                        }

                    </div>
                    <div class="col-md-4">
                        <div class="form-floating form-floating-outline">
                            <input asp-for="oMcData!.Cost" type="text" id="cost" class="form-control" placeholder="TSM00007" />
                            <label for="cost">Cost</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="image-preview">
                            @if (Model.oMcData.ImageFR != null && Model.oMcData.ImageFR.Length > 0)
                            {
                                var base64Image = Convert.ToBase64String(Model.oMcData.ImageFR);
                                <img id="frontImg" src="data:image/jpeg;base64,@base64Image" alt="Image Preview" style="max-width: 100%; height: auto;border-radius:10px" />
                            }
                            else
                            {
                                <img src="~/img/my-images/no-image.jpg" alt="No Image Available" style="max-width: 100px; height: auto;" />
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="image-preview">
                            @if (Model.oMcData.ImageBK != null && Model.oMcData.ImageBK.Length > 0)
                            {
                                var base64Image = Convert.ToBase64String(Model.oMcData.ImageBK);
                                <img id="bakcImg" src="data:image/jpeg;base64,@base64Image" alt="Image Preview" style="max-width: 100%; height: auto;border-radius:10px" />
                            }
                            else
                            {
                                <img src="~/img/my-images/no-image.jpg" alt="No Image Available" style="max-width: 100px; height: auto;" />
                            }
                        </div>         
                </div>
            </div>
        </div>
    </div>
</form>
