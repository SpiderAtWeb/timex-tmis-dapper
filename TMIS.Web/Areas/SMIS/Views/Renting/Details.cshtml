@model MachineRentedVM


<!-- Multi Column with Form Separator -->
<div class="card mb-6">
    <h5 class="card-header page-header">Pending Approval - Rented Sewing Machine Details</h5>
    <div class="row g-4 card-body">

        <div class="row g-1 mt-3">
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="QrCode" type="text" id="qrCode" class="form-control" placeholder="TSM00007" />
                    <label for="qrCode">QR Code</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="SerialNo" type="text" id="serialNo" class="form-control" placeholder="4DOFE05030" />
                    <label for="serialNo">Serial No</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="ServiceSeq" type="number" id="ServiceSeq" class="form-control" placeholder="100" />
                    <label for="ServiceSeq">Service Sequence (Days)</label>
                </div>
            </div>

            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="MachineModel" type="text" id="MachineModel" class="form-control" placeholder="100" />
                    <label for="MachineModel">Machine Model</label>
                </div>
            </div>
        </div>

        <div class="row g-1">
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="MachineBrand" type="text" id="MachineBrand" class="form-control" placeholder="100" />
                    <label for="MachineBrand">Machine Brand</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="MachineType" type="text" id="MachineType" class="form-control" placeholder="100" />
                    <label for="MachineType">Machine Type</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="OwnedUnit" type="text" id="OwnedUnit" class="form-control" placeholder="100" />
                    <label for="OwnedUnit">Unit</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="Location" type="text" id="Location" class="form-control" placeholder="100" />

                    <label for="Location">Location</label>
                </div>
            </div>
        </div>

        <div class="row g-1">
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="DateBorrow" type="text" id="DateBorrow" class="form-control" placeholder="100" />
                    <label for="DateBorrow">Purchased Date</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="DateDue" type="text" id="DateDue" class="form-control" placeholder="100" />
                    <label for="DateDue">Due Date</label>
                </div>
            </div>

            <div class="col-3">
                <div class="image-preview">
                    @if (Model.ImageFR != null && Model.ImageFR.Length > 0)
                    {
                        var base64Image = Convert.ToBase64String(Model.ImageFR);
                        <img id="frontImg" src="data:image/jpeg;base64,@base64Image" alt="Image Preview" style="max-width: 100%; height: auto;" />
                    }
                    else
                    {
                        <img src="~/img/my-images/no-image.jpg" alt="No Image Available" style="max-width: 100px; height: auto;" />
                    }
                </div>
            </div>
            <div class="col-3">
                <div class="image-preview">
                    @if (Model.ImageBK != null && Model.ImageBK.Length > 0)
                    {
                        var base64Image = Convert.ToBase64String(Model.ImageBK);
                        <img id="bakcImg" src="data:image/jpeg;base64,@base64Image" alt="Image Preview" style="max-width: 100%; height: auto;" />
                    }
                    else
                    {
                        <img src="~/img/my-images/no-image.jpg" alt="No Image Available" style="max-width: 100px; height: auto;" />
                    }
                </div>
            </div>
        </div>

        <div class="row g-1">
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="Supplier" type="text" id="Supplier" class="form-control" placeholder="25000" />

                    <label for="supplierId">Renting Supplier</label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-floating form-floating-outline">
                    <input asp-for="Comments" type="text" id="Comments" class="form-control" readonly />
                    <label for="comments">Comments</label>
                </div>
            </div>
        </div>

        <div class="row g-1">
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="CostMethod" type="text" id="CostMethod" class="form-control" readonly />
                    <label for="CostMethod">Cost Method</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating form-floating-outline">
                    <input asp-for="Cost" type="number" id="cost" class="form-control" readonly />
                    <label for="cost">Cost</label>
                </div>
            </div>
            @if (Model.DispatchImageAv)
            {
                <div class="col-3">
                    <a href="@Url.Action("GetPdf", "MachineAdd", new { id = Model.Id, docType = 1 })" target="_blank" class="btn btn-primary h-100 w-100">
                        Download (Dispatch PDF)
                    </a>
                </div>
            }

            @if (Model.ReturnGPImageAv)
            {
                <div class="col-3">
                    <a href="@Url.Action("GetPdf", "MachineAdd", new { id = Model.Id, docType = 2 })" target="_blank" class="btn btn-primary h-100 w-100">
                        Download (Return-Gatepass PDF)
                    </a>
                </div>
            }

        </div>
        <form asp-action="UpdateStatus" method="post">
            <div class="row g-1 mt-2">
                <h6>Finance Remarks</h6>
                <div class="col-6">
                    <div class="form-floating form-floating-outline">
                        <input type="text" name="Remarks"  class="form-control" />
                        <label for="Remarks">Remarks</label>
                    </div>
                </div>

                <div class="col-4 row">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="pt-1 col-6">
                        <button type="submit" name="action" value="approve" class="btn btn-success w-100 h-100"><i class="ri-check-line"></i>&nbsp;Approve</button>
                    </div>
                    <div class="pt-1 col-6">
                        <button type="submit" name="action" value="reject" class="btn btn-danger w-100 h-100"><i class="ri-close-fill"></i>&nbsp;Reject</button>
                    </div>
                </div>
            </div>
        </form>


        <div class="pt-1">
            <a asp-controller="Renting" asp-action="Approval" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>



