@using Microsoft.AspNetCore.Mvc
@model InputModel

@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Log in";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/form-validation.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/&#64;form-validation/popular.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/bootstrap5.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/auto-focus.js"></script>
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="position-relative">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6 mx-4">

            <!-- Login -->
            <div class="card p-2">
                <div class="row">
                    <div class="col-4">
                        <div class="text-center mt-8">
                            <img src="~/img/my-images/timex-logo.jpg"
                                 style="width: 165px;" alt="logo">
                            <h4 class="mt-1 font-weight-bold">TIMEX DIGITAL TRANSFORMATION</h4>
                        </div>
                    </div>

                    <div class="col">                      

                        <div class="card-body mt-1">
                            <div class="app-brand justify-content-center mt-5">
                                <a href="/" class="app-brand-link gap-2">
                                    <span class="app-brand-text demo text-heading fw-semibold mb-3">Login</span>
                                </a>
                            </div>

                            <div class="text-center">
                                <h4>MANAGEMENT INFORMATION SYSTEM</h4>
                            </div>
                            <p class="mb-2">Please login to your account</p>
                            <form id="account" method="post">
                                <div class="form-floating form-floating-outline mb-5">
                                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Email" for="email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-5">
                                    <div class="form-password-toggle">
                                        <div class="input-group input-group-merge">
                                            <div class="form-floating form-floating-outline">
                                                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                                <label asp-for="Password" for="password">Password</label>

                                            </div>
                                            <span class="input-group-text cursor-pointer"><i class="ri-eye-off-line ri-20px"></i></span>

                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-5 pb-2 d-flex justify-content-between pt-2 align-items-center">
                                    <div class="form-check mb-0">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="remember-me">
                                        <label asp-for="RememberMe" class="form-check-label" for="remember-me">
                                            Remember Me
                                        </label>
                                    </div>
                                    <a href="/Auth/ForgotPasswordBasic" class="float-end mb-1">
                                        <span>Forgot Password?</span>
                                    </a>
                                </div>
                                <div class="mb-5">
                                    <button class="btn btn-primary d-grid w-100" type="submit">login</button>
                                </div>
                            </form>

                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@section PageScripts {
    <partial name="_ValidationScriptsPartial" />
}

